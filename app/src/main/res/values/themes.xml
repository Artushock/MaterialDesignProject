<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
        <item name="android:colorBackground">@color/light_grey</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="AppTheme.BlueGreenTheme">
        <item name="colorPrimary">@color/first_theme_primary_dark_color</item>
        <item name="colorPrimaryVariant">@color/first_theme_primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/first_theme_secondary_color</item>
        <item name="colorSecondaryVariant">@color/first_theme_secondary_light_color</item>
        <item name="colorSurface">@color/first_theme_primary_light_color</item>
        <item name="colorOnBackground">@color/first_theme_primary_color</item>
    </style>

    <style name="AppTheme.RedOrangeTheme">
        <item name="colorPrimary">@color/second_theme_primary_dark_color</item>
        <item name="colorPrimaryVariant">@color/second_theme_primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/second_theme_secondary_color</item>
        <item name="colorSecondaryVariant">@color/second_theme_secondary_dark_color</item>
        <item name="colorSurface">@color/second_theme_primary_light_color</item>
        <item name="colorOnBackground">@color/second_theme_primary_color</item>
    </style>

    <style name="WikiInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="boxStrokeErrorColor">?colorOnError</item>
        <item name="android:textColorHint">?colorSurface</item>
        <item name="endIconTint">?colorSurface</item>
        <item name="helperTextTextColor">?colorSecondary</item>
        <item name="counterTextColor">?colorSecondary</item>

        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
    </style>

</resources>
